<UserControl x:Class="PadFootingDesigner.Controls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PadFootingDesigner.Controls"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <!--<UserControl.DataContext>
        <local:UserControl1ViewModel/>
    </UserControl.DataContext>-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Margin="10">
            <GroupBox Header="hellooo">
                <StackPanel Height="300">
                    <Button Content="Press Me" VerticalAlignment="Center" Margin="0 50 0 30" Command="{Binding HelloButton}"/>
                    <TextBox Text="{Binding TextBoxWords}" Margin="0"/>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
